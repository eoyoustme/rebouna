---====== Load spawner ======---
local spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Entity%20Spawner/V2/Source.lua"))()

---====== Create entity ======---
local entity = spawner.Create({
	Entity = {
		Name = "Dread",
		Asset = "rbxassetid://12329981842", -- Đảm bảo ID hợp lệ
		HeightOffset = 0
	},
	Lights = {
		Flicker = {
			Enabled = false,
			Duration = 1
		},
		Shatter = true,
		Repair = false
	},
	Earthquake = {
		Enabled = false
	},
	CameraShake = {
		Enabled = true,
		Range = 100,
		Values = {1.5, 20, 0.1, 1} -- Magnitude, Roughness, FadeIn, FadeOut
	},
	Movement = {
		Speed = 120,
		Delay = 3,
		Reversed = false
	},
	Rebounding = {
		Enabled = true,
		Type = "Ambush", -- "Blitz"
		Min = 4,
		Max = 4,
		Delay = 0.2
	},
	Damage = {
		Enabled = true,
		Range = 40,
		Amount = 125
	},
	Crucifixion = {
		Enabled = true,
		Range = 40,
		Resist = false,
		Break = true
	},
	Death = {
		Type = "Guiding", -- "Curious"
		Hints = {"You die to owner", "GOODBYE", "I can't help you", "HE is..."},
		Cause = ""
	}
})

---====== Debug entity callbacks ======---
entity:SetCallback("OnSpawned", function()
	print("Entity has spawned")
	local cue2 = Instance.new("Sound")
	cue2.Parent = game.Workspace
	cue2.Name = "Spawn"
	cue2.SoundId = "rbxassetid://9125712561" -- Đảm bảo ID hợp lệ
	cue2.Volume = 4.5
	cue2.PlaybackSpeed = 0.7
	cue2:Play()
end)

entity:SetCallback("OnStartMoving", function()
	print("Entity has started moving")
end)

entity:SetCallback("OnEnterRoom", function(room, firstTime)
	if firstTime then
		print("Entity has entered room: " .. room.Name .. " for the first time")
	else
		print("Entity has entered room: " .. room.Name .. " again")
	end
end)

entity:SetCallback("OnLookAt", function(lineOfSight)
	if lineOfSight then
		print("Player is looking at entity")
	else
		print("Player view is obstructed by something")
	end
end)

entity:SetCallback("OnRebounding", function(startOfRebound)
	if startOfRebound then
		print("Entity has started rebounding")
	else
		print("Entity has finished rebounding")
	end
end)

entity:SetCallback("OnDespawning", function()
	print("Entity is despawning")
end)

entity:SetCallback("OnDespawned", function()
	print("Entity has despawned")
end)

entity:SetCallback("OnDamagePlayer", function(newHealth)
	if newHealth == 0 then
		print("Entity has killed the player - Starting Jumpscare")

		local player = game.Players.LocalPlayer
		local playerGui = player:WaitForChild("PlayerGui")

		local character = player.Character or player.CharacterAdded:Wait()
		local humanoid = character:WaitForChild("Humanoid")
		local camera = workspace.CurrentCamera

		local screenGui = Instance.new("ScreenGui")
		screenGui.Name = "JumpscareScreen"
		screenGui.IgnoreGuiInset = true
		screenGui.ResetOnSpawn = false -- Giữ GUI khi respawn
		screenGui.Parent = playerGui

		local stopEffects = false
		local doneFading = false

		-- Sound Setup
		local killSound = Instance.new("Sound")
		killSound.Name = "JumpscareKillSound"
		killSound.PlaybackSpeed = 1
		killSound.SoundId = "rbxassetid://18459521002" -- Đảm bảo ID hợp lệ
		killSound.Volume = 10
		killSound.Looped = true
		killSound.Parent = screenGui

		local flange = Instance.new("FlangeSoundEffect")
		flange.Parent = killSound
		flange.Depth = 0.15
		flange.Mix = 0.15
		flange.Rate = 0.2

		local trem = Instance.new("TremoloSoundEffect")
		trem.Parent = killSound
		trem.Depth = 0.15
		trem.Duty = 0.15
		trem.Frequency = 1

		local pitch = Instance.new("PitchShiftSoundEffect")
		pitch.Parent = killSound
		pitch.Octave = 1

		local distort = Instance.new("DistortionSoundEffect")
		distort.Parent = killSound
		distort.Level = 0.2

		-- Background Image
		local background = Instance.new("ImageLabel")
		background.Parent = screenGui
		background.Size = UDim2.new(1, 0, 1, 0)
		background.ImageTransparency = 0.5
		background.BackgroundTransparency = 0
		background.BackgroundColor3 = Color3.new(0, 0, 0)
		background.Image = "rbxassetid://1712510813" -- Đảm bảo ID hợp lệ
		background.ZIndex = 1

		-- Face Image
		local face = Instance.new("ImageLabel")
		face.Parent = screenGui
		face.AnchorPoint = Vector2.new(0.5, 0.5)
		face.Position = UDim2.new(0.5, 0, 0.589, 0)
		face.Size = UDim2.new(0, 300, 0, 300)
		face.Image = "rbxassetid://11395249132" -- Đảm bảo ID hợp lệ
		face.ImageTransparency = 0
		face.BackgroundTransparency = 1
		face.ZIndex = 2

		-- Text Image
		local text = Instance.new("ImageLabel")
		text.Parent = screenGui
		text.AnchorPoint = Vector2.new(0.5, 0.5)
		text.Position = UDim2.new(0.5, 0, 0.5, 0)
		text.Size = UDim2.new(0, 150, 0, 150)
		text.Image = "rbxassetid://117106082021449" -- Đảm bảo ID hợp lệ
		text.ImageTransparency = 0
		text.BackgroundTransparency = 1
		text.ZIndex = 3

		-- Bắt đầu hiệu ứng âm thanh và zoom camera
		killSound:Play()

		local startFov = camera.FieldOfView
		local zoomFov = 60
		local zoomDuration = 0.7

		camera.CameraType = Enum.CameraType.Scriptable

		local tweenInfoFov = TweenInfo.new(zoomDuration, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
		local tweenFov = game:GetService("TweenService"):Create(camera, tweenInfoFov, {FieldOfView = zoomFov})
		tweenFov:Play()

		local targetImageSize = UDim2.new(0, 1200, 0, 1200)
		local targetImagePosition = UDim2.new(0.5, 0, 0.5, 0)

		local tweenInfoImage = TweenInfo.new(zoomDuration, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
		local tweenImage = game:GetService("TweenService"):Create(face, tweenInfoImage, {Size = targetImageSize, Position = targetImagePosition})
		tweenImage:Play()

		task.wait(0.1) -- Đợi asset load

		-- Hiệu ứng lặp song song
		task.spawn(function()
			while not stopEffects and background and background.Parent do
				background.BackgroundTransparency = 0
				background.ImageTransparency = 0.3
				task.wait(0.1)
				background.BackgroundTransparency = 0.3
				background.ImageTransparency = 0
				task.wait(0.1)
			end
		end)

		task.spawn(function()
			while not stopEffects and background and background.Parent do
				background.Image = "rbxassetid://131073231978514" -- Đảm bảo ID hợp lệ
				task.wait(0.0589)
				background.Image = "rbxassetid://105841646930424" -- Đảm bảo ID hợp lệ
				task.wait(0.0589)
			end
		end)

		task.spawn(function()
			while not stopEffects and face and face.Parent do
				face.Rotation = 10
				face.Image = "rbxassetid://17215733855"
				task.wait(0.0589)
				face.Rotation = -10
				face.Image = "rbxassetid://17215733855"
				task.wait(0.0589)
			end
		end)

		task.spawn(function()
			while not stopEffects and text and text.Parent do
				text.Image = "rbxassetid://88490592395124"
				task.wait(0.0589)
				text.Image = "rbxassetid://99132041298170"
				task.wait(0.0589)
			end
		end)

		task.spawn(function()
			while not stopEffects and text and text.Parent do
				text.Position = UDim2.new(math.random(), 0, math.random(), 0)
				task.wait(0.05)
				text.Position = UDim2.new(math.random(), 0, math.random(), 0)
				task.wait(0.05)
			end
		end)

		task.spawn(function()
			while not stopEffects and text and text.Parent do
				text.ImageTransparency = 0
				task.wait(0.1)
				text.ImageTransparency = 1
				task.wait(0.1)
			end
		end)

		-- Kết thúc hiệu ứng chính
		task.wait(zoomDuration)
		stopEffects = true
		if killSound then killSound:Stop() end

		-- Fade out UI
		task.spawn(function()
			while not doneFading and screenGui and face and text and background do
				face.ImageTransparency = math.min(face.ImageTransparency + 0.1, 1)
				text.ImageTransparency = math.min(text.ImageTransparency + 0.1, 1)
				background.ImageTransparency = math.min(background.ImageTransparency + 0.1, 1)
				background.BackgroundTransparency = math.min(background.BackgroundTransparency + 0.1, 1)
				if face.ImageTransparency >= 1 then
					doneFading = true
				end
				task.wait(0.05)
			end
			if screenGui then
				screenGui:Destroy()
			end
		end)

		task.wait(0.4)

		-- Reset camera
		if camera then
			camera.CameraType = Enum.CameraType.Custom
			camera.FieldOfView = startFov
		end

	else
		print("Entity has damaged the player (but not killed)")
	end
end)

---====== Run entity ======---
entity:Run()
