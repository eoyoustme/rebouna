local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RandomImageGui"
screenGui.Parent = playerGui
screenGui.IgnoreGuiInset = true

local red = Instance.new("ImageLabel")
red.Size = UDim2.new(1, 0, 1, 0)
red.BackgroundTransparency = 1 -- Make the background fully transparent
red.Image = "rbxassetid://76637426417491" -- Set the image using a random Image ID
red.ImageTransparency = 1
red.Parent = screenGui

task.spawn(function()
while true do
red.Image = "rbxassetid://94547864377343"
wait(0)
red.Image = "rbxassetid://76637426417491"
wait(0)
end
end)

-- spawn
local spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Entity%20Spawner/V2/Source.lua"))()
local get = true
local entity = spawner.Create({
	Entity = {
		Name = "RipperMovings",
		Asset = "rbxassetid://98307026363118",
		HeightOffset = 1
	},
	Lights = {
		Flicker = {
			Enabled = false,
			Duration = 7
		},
		Shatter = false,
		Repair = false
	},
	Earthquake = {
		Enabled = false
	},
	CameraShake = {
		Enabled = true,
		Range = 100,
		Values = {5, 3, 2, 2} -- Magnitude, Roughness, FadeIn, FadeOut
	},
	Movement = {
		Speed = 125,
		Delay = 6,
		Reversed = false
	},
	Rebounding = {
		Enabled = false,
		Type = "Ambush", -- "Blitz"
		Min = 2,
		Max = 2,
		Delay = 0
	},
	Damage = {
		Enabled = true,
		Range = 50,
		Amount = 0.01
	},
	Crucifixion = {
		Enabled = true,
		Range = 100,
		Resist = false,
		Break = true
	},
	Death = {
		Type = "Guiding", -- "Curious"
		Hints = {"You dead to Ripper", "Just hide when he appears"},
		Cause = ""
	}
})

--Lights--
local TweenService = game:GetService("TweenService")
local Tweeninfo = TweenInfo.new(5, Enum.EasingStyle.Linear, Enum.EasingDirection.Out)
local color = {Color = Color3.new(1, 0, 0)} -- Use normalized color values


for i, v in pairs(workspace.CurrentRooms[game.ReplicatedStorage.GameData.LatestRoom.Value]:GetDescendants()) do
    if v:IsA("Light") then
        TweenService:Create(v, Tweeninfo, color):Play()
    end
    if v.Parent.Name == "LightFixture" then
          TweenService:Create(v.Parent, Tweeninfo, color):Play()
          end
end

local CameraShaker = require(game.ReplicatedStorage.CameraShaker)
            local camera = game.Workspace.CurrentCamera
            local camShake = CameraShaker.new(Enum.RenderPriority.Camera.Value, function(shakeCf)
                camera.CFrame = camera.CFrame * shakeCf
            end)
            camShake:Start()
            camShake:ShakeOnce(5, 5, 0, 5.5, 1, 0)
            camShake:Shake(CameraShaker.Presets.Earthquake)
local Debris = game:GetService("Debris")
local tweenservice = game:GetService("TweenService")
local color = Instance.new("ColorCorrectionEffect", game.Lighting)
task.spawn(function()
    tweenservice:Create(color, TweenInfo.new(5), {
        TintColor = Color3.fromRGB(255, 0, 0),
        Saturation = -0.7,
        Contrast = 0.2
    }):Play()
end)
            
local sound = Instance.new("Sound")
     	sound.SoundId = "rbxassetid://"
      sound.PlaybackSpeed = 0.8
     	sound.Looped = false
     	sound.Parent = workspace
 	    sound.Volume = 10
     	sound:Play()
Debris:AddItem(sound, 10)
         
---====== Debug entity ======---

entity:SetCallback("OnDespawning", function()
camShake:Start()
camShake:ShakeOnce(10, 15, 0, 5.5, 1, 0)
camShake:Shake(CameraShaker.Presets.Earthquake)
workspace.CurrentRooms[game.ReplicatedStorage.GameData.LatestRoom.Value]:WaitForChild("Door").ClientOpen:FireServer()

for i,v in pairs(game.Workspace:WaitForChild("RipperMovings"):GetDescendants()) do
                      if v:IsA("Sound") then
                           v:Destroy()
                      end
end

task.spawn(function()
    tweenservice:Create(color, TweenInfo.new(10), {
        TintColor = Color3.fromRGB(255, 255, 255),
        Saturation = 0,
        Contrast = 0
    }):Play()
    Debris:AddItem(color, 10)
end)

if get == true then
function GitAud(soundgit,filename)
    SoundName=tostring(SoundName)
    local url=soundgit
    local FileName = filename
    writefile(FileName..".mp3", game:HttpGet(url))
    return (getcustomasset or getsynasset)(FileName..".mp3")
end

function CustomGitSound(soundlink, vol, filename)
    local sound = Instance.new("Sound")
    sound.SoundId = GitAud(soundlink, filename)
    sound.Parent = workspace
    sound.Volume = 10
    sound.Name = "DoorBreaker"
   sound:Play()
end

CustomGitSound("https://github.com/Darker-TheDarkestGuy/DOORS/raw/refs/heads/main/lv_0_20250619133504.mp3?raw=true", 1, " DoorBreaker")

local CameraShaker = require(game.ReplicatedStorage.CameraShaker)
local camera = game.Workspace.CurrentCamera
local camShake = CameraShaker.new(Enum.RenderPriority.Camera.Value, function(shakeCf)
camera.CFrame = camera.CFrame * shakeCf
end)
camShake:Start()
camShake:ShakeOnce(20, 5, 5, 3, 2, 1)

