---====== Load spawner ======---

local spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Entity%20Spawner/V2/Source.lua"))()

---====== Create entity ======---

local entity = spawner.Create({
	Entity = {
		Name = "HUGERRORED",
		Asset = "rbxassetid://12329981842", -- Đảm bảo ID này hợp lệ
		HeightOffset = 0
	},
	Lights = {
		Flicker = {
			Enabled = false,
			Duration = 1
		},
		Shatter = true,
		Repair = false
	},
	Earthquake = {
		Enabled = false
	},
	CameraShake = {
		Enabled = true,
		Range = 100,
		Values = {1.5, 20, 0.1, 1} -- Magnitude, Roughness, FadeIn, FadeOut
	},
	Movement = {
		Speed = 120,
		Delay = 3,
		Reversed = false
	},
	Rebounding = {
		Enabled = true,
		Type = "Ambush", -- "Blitz"
		Min = 4,
		Max = 4,
		Delay = 0.2
	},
	Damage = {
		Enabled = true,
		Range = 40,
		Amount = 125
	},
	Crucifixion = {
		Enabled = true,
		Range = 40,
		Resist = false,
		Break = true
	},
	Death = {
		Type = "Guiding", -- "Curious"
		Hints = {"You die to owner", "GOODBYE", "I can't help you", "HE is..."},
		Cause = ""
	}
})

---====== Debug entity ======---

entity:SetCallback("OnSpawned", function()
    print("Entity has spawned")
    local cue2 = Instance.new("Sound")
    cue2.Parent = game.Workspace
    cue2.Name = "Spawn"
    cue2.SoundId = "rbxassetid://9125712561" -- Đảm bảo ID này hợp lệ
    cue2.Volume = 4.5
    cue2.PlaybackSpeed = 0.7
    cue2:Play()
end)

entity:SetCallback("OnStartMoving", function()
    print("Entity has started moving")
end)

entity:SetCallback("OnEnterRoom", function(room, firstTime)
    if firstTime == true then
        print("Entity has entered room: ".. room.Name.. " for the first time")
    else
        print("Entity has entered room: ".. room.Name.. " again")
    end
end)

entity:SetCallback("OnLookAt", function(lineOfSight)
	if lineOfSight == true then
		print("Player is looking at entity")
	else
		print("Player view is obstructed by something")
	end
end)

entity:SetCallback("OnRebounding", function(startOfRebound)
    if startOfRebound == true then
        print("Entity has started rebounding")
	else
        print("Entity has finished rebounding")
	end
end)

entity:SetCallback("OnDespawning", function()
    print("Entity is despawning")
end)

entity:SetCallback("OnDespawned", function()
    print("Entity has despawned")
end)

entity:SetCallback("OnDamagePlayer", function(newHealth)
	if newHealth == 0 then
		print("Entity has killed the player - Starting Jumpscare")

        local player = game.Players.LocalPlayer
        local playerGui = player:WaitForChild("PlayerGui")

        local character = player.Character or player.CharacterAdded:Wait()
        local humanoid = character:WaitForChild("Humanoid")
        local camera = workspace.CurrentCamera

        local screenGui = Instance.new("ScreenGui")
        screenGui.Name = "JumpscareScreen"
        screenGui.IgnoreGuiInset = true
        screenGui.Parent = playerGui

        local stopEffects = false
        local doneFading = false

        -- Sound Setup
        local killSound = Instance.new("Sound")
        killSound.Name = "JumpscareKillSound"
        killSound.PlaybackSpeed = 1
        killSound.SoundId = "rbxassetid://18459521002" -- Đảm bảo ID này hợp lệ
        killSound.Volume = 10
        killSound.Looped = true
        killSound.Parent = screenGui -- Thay đổi parent để dễ quản lý cục bộ

        local flange = Instance.new("FlangeSoundEffect")
        flange.Parent = killSound
        flange.Depth = 0.15
        flange.Mix = 0.15
        flange.Rate = 0.2

        local trem = Instance.new("TremoloSoundEffect")
        trem.Parent = killSound
        trem.Depth = 0.15
        trem.Duty = 0.15
        trem.Frequency = 1

        local pitch = Instance.new("PitchShiftSoundEffect")
        pitch.Parent = killSound
        pitch.Octave = 1

        local distort = Instance.new("DistortionSoundEffect")
        distort.Parent = killSound
        distort.Level = 0.2


        -- Background Image
        local background = Instance.new("ImageLabel")
        background.Parent = screenGui
        background.Size = UDim2.new(1, 0, 1, 0)
        background.ImageTransparency = 0.5
        background.BackgroundTransparency = 0
        background.BackgroundColor3 = Color3.new(0, 0, 0)
        background.Image = "rbxassetid://1712510813" -- Đảm bảo ID này hợp lệ

        -- Face Image
        local face = Instance.new("ImageLabel")
        face.Parent = screenGui
        face.AnchorPoint = Vector2.new(0.5, 0.5)
        face.Position = UDim2.new(0.5, 0, 0.589, 0)
        face.Size = UDim2.new(0, 300, 0, 300)
        face.Image = "rbxassetid://11395249132" -- Đảm bảo ID này hợp lệ
        face.ImageTransparency = 0
        face.BackgroundTransparency = 1

        -- Text Image (Assuming these are image-based texts)
        local text = Instance.new("ImageLabel") -- Hoặc TextLabel nếu bạn muốn chữ động
        text.Parent = screenGui
        text.AnchorPoint = Vector2.new(0.5, 0.5)
        text.Position = UDim2.new(0.5, 0, 0.5, 0)
        text.Size = UDim2.new(0, 150, 0, 150)
        text.Image = "rbxassetid://117106082021449" -- Đảm bảo ID này hợp lệ
        text.ImageTransparency = 0
        text.BackgroundTransparency = 1

        ---
        --- Khởi động hiệu ứng và Zoom đồng thời
        ---

        -- Bắt đầu âm thanh ngay lập tức
        killSound:Play()

        -- Camera FOV Zoom Setup
        local startFov = camera.FieldOfView
        local zoomFov = 60 -- Độ FOV khi zoom (thấp hơn = zoom nhiều hơn)
        local zoomDuration = 0.7 -- Thời gian để zoom hoàn tất

        camera.CameraType = Enum.CameraType.Scriptable -- Chuyển camera sang chế độ scriptable

        -- Tween cho FOV của camera
        local tweenInfoFov = TweenInfo.new(zoomDuration, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
        local propertiesFov = {FieldOfView = zoomFov}
        local tweenFov = game:GetService("TweenService"):Create(camera, tweenInfoFov, propertiesFov)
        tweenFov:Play() -- Bắt đầu zoom FOV ngay

        -- Tween để phóng to và di chuyển hình ảnh jump scare
        local targetImageSize = UDim2.new(0, 1200, 0, 1200) -- Kích thước cuối cùng của mặt
        local targetImagePosition = UDim2.new(0.5, 0, 0.5, 0) -- Đảm bảo nó ở giữa màn hình

        local tweenInfoImage = TweenInfo.new(zoomDuration, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
        local propertiesImage = {
            Size = targetImageSize,
            Position = targetImagePosition
        }
        local tweenImage = game:GetService("TweenService"):Create(face, tweenInfoImage, propertiesImage)
        tweenImage:Play() -- Bắt đầu phóng to hình ảnh ngay

        -- Đợi một chút để các tài sản hình ảnh có thời gian tải trước khi bắt đầu nhấp nháy
        task.wait(0.1) 

        ---
        --- Concurrent Effects (tiếp tục chạy song song)
        ---

        -- Task for background transparency and image transparency blinking
        task.spawn(function()
            while not stopEffects do
                if background then -- Kiểm tra xem đối tượng có tồn tại không
                    background.BackgroundTransparency = 0
                    background.ImageTransparency = 0.3
                    task.wait(0.1)
                    background.BackgroundTransparency = 0.3
                    background.ImageTransparency = 0
                    task.wait(0.1)
                else
                    break -- Thoát vòng lặp nếu đối tượng bị hủy
                end
            end
        end)

        -- Task for background image changing
        task.spawn(function()
            while not stopEffects do
                if background then
                    background.Image = "rbxassetid://131073231978514" -- Đảm bảo ID này hợp lệ
                    task.wait(0.0589)
                    background.Image = "rbxassetid://105841646930424" -- Đảm bảo ID này hợp lệ
                    task.wait(0.0589)
                else
                    break
                end
            end
        end)

        -- Task for face rotation and image changing
        task.spawn(function()
            while not stopEffects do
                if face then
                    face.Rotation = 10
                    face.Image = "rbxassetid://17215733855" -- Đảm bảo ID này hợp lệ
                    task.wait(0.0589)
                    face.Rotation = -10
                    face.Image = "rbxassetid://17215733855" -- Đảm bảo ID này hợp lệ
                    task.wait(0.0589)
                    face.Rotation = 10
                    face.Image = "rbxassetid://17215733855"
                    task.wait(0.0589)
                    face.Rotation = -10
                    face.Image = "rbxassetid://17215733855"
                    task.wait(0.0589)
                else
                    break
                end
            end
        end)

        -- Task for text image changing
        task.spawn(function()
            while not stopEffects do
                if text then
                    text.Image = "rbxassetid://88490592395124" -- Đảm bảo ID này hợp lệ
                    task.wait(0.0589)
                    text.Image = "rbxassetid://99132041298170" -- Đảm bảo ID này hợp lệ
                    task.wait(0.0589)
                else
                    break
                end
            end
        end)

        -- Task for text position (random movement)
        task.spawn(function()
            while not stopEffects do
                if text then
                    -- Đảm bảo các giá trị nằm trong khoảng 0-1 cho UDim2 scale
                    text.Position = UDim2.new(Random.new():NextNumber(0, 1), 0, Random.new():NextNumber(0, 1), 0)
                    task.wait(0.05)
                    text.Position = UDim2.new(Random.new():NextNumber(0, 1), 0, Random.new():NextNumber(0, 1), 0)
                    task.wait(0.05)
                else
                    break
                end
            end
        end)

        -- Task for text image transparency blinking
        task.spawn(function()
            while not stopEffects do
                if text then
                    text.ImageTransparency = 0
                    task.wait(0.1)
                    text.ImageTransparency = 1
                    task.wait(0.1)
                else
                    break
                end
            end
        end)

        ---
        --- Kết thúc Jumpscare và Dọn dẹp
        ---

        -- Chờ cho hiệu ứng chính (bao gồm zoom) hoàn tất
        task.wait(zoomDuration) 
        print("Jumpscare main effects finished, stopping loops.")

        stopEffects = true -- Dừng các hiệu ứng lặp
        if killSound then killSound:Stop() end -- Dừng âm thanh nếu nó còn tồn tại

        -- Fade out UI
        task.spawn(function()
            while not doneFading do
                if screenGui and face and text and background then -- Kiểm tra sự tồn tại của ScreenGui và các phần tử con
                    face.ImageTransparency = math.min(face.ImageTransparency + 0.1, 1)
                    text.ImageTransparency = math.min(text.ImageTransparency + 0.1, 1)
                    background.ImageTransparency = math.min(background.ImageTransparency + 0.1, 1)
                    background.BackgroundTransparency = math.min(background.BackgroundTransparency + 0.1, 1)

                    if face.ImageTransparency >= 1 then
                        doneFading = true
                    end
                else
                    doneFading = true -- Dừng vòng lặp nếu ScreenGui hoặc các phần tử con đã bị hủy
                end
                task.wait(0.05)
            end
            print("Fading complete, destroying ScreenGui.")
            if screenGui then
                screenGui:Destroy()
            end
        end)

        task.wait(0.4) -- Chờ một chút sau khi fade out trước khi reset camera và kill player

        -- Reset camera type back to Custom (player control) and its FOV
        if camera then
            camera.CameraType = Enum.CameraType.Custom
            camera.FieldOfView = startFov -- Reset về FoV ban đầu
        end

    else
		print("Entity has damaged the player (but not killed)")
	end
end)

--[[

DEVELOPER NOTE:
By overwriting 'CrucifixionOverwrite' the default crucifixion callback will be replaced with your custom callback.

entity:SetCallback("CrucifixionOverwrite", function()
    print("Custom crucifixion callback")
end)

]]--

---====== Run entity ======---

entity:Run()
