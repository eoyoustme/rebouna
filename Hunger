local cue2 = Instance.new("Sound")
cue2.Parent = game.Workspace
cue2.Name = "Spawn"
cue2.SoundId = "rbxassetid://933230732"
cue2.Volume = 45
cue2.PlaybackSpeed = 1
cue2:Play()
-- The 'end' here seems misplaced if it's meant to close the 'local cue2' block. Assuming it was a typo and this is the end of an implied block or should be removed.

wait(16)

-- Check current room
local entityModel = true
local latestRoom = game.ReplicatedStorage.GameData.LatestRoom.Value

-- If in Seek, Figure, or Room 90+
if game.Workspace:FindFirstChild("SeekMovingNewClone") or
    latestRoom == 50 or latestRoom == 100 or
    (latestRoom >= 90 and latestRoom <= 100) then
    entityModel = false
end

local Kill = true
local depthsTer = game:GetObjects("rbxassetid://122309151397392")[1] -- Load DepthsTer from the ID
depthsTer.Parent = game.Workspace

local part = depthsTer:FindFirstChildWhichIsA("BasePart") or depthsTer:FindFirstChildWhichIsA("Part")

-- Set the position of DepthsTer in the room
part.CFrame = game.Workspace.CurrentRooms:GetChildren()[#game.Workspace.CurrentRooms:GetChildren() - 1].Parts.Floor.CFrame + Vector3.new(0, 6, 0)

wait(1)

task.spawn(function()
    while Kill == true do
        task.wait(0.7)  -- Reduce the wait time to increase damage speed
        local _, camera = game.Workspace.CurrentCamera:WorldToViewportPoint(part.Position)

        -- If the player is not looking at DepthTer, they take damage and are frozen
        if not camera then
            game.Players.LocalPlayer.Character.Humanoid:TakeDamage(5)

            -- Freeze player movement and mouse input
            local player = game.Players.LocalPlayer
            local humanoid = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                humanoid.WalkSpeed = 0
                humanoid.JumpPower = 0
                player.CameraMinZoomDistance = 0
                player.CameraMaxZoomDistance = 0
                player.DevEnableMouseLock = false
                player.DevCameraOcclusionMode = Enum.DevCameraOcclusionMode.Invisicam
                player.CameraMode = Enum.CameraMode.LockFirstPerson -- Optional: force first person view
                player.Character.Humanoid.PlatformStand = true -- Prevents movement and applies a "falling" state

                -- Wait for 0.3 seconds
                task.wait(0.3)

                -- Unfreeze player movement and mouse input
                humanoid.WalkSpeed = 16 -- Default WalkSpeed
                humanoid.JumpPower = 50 -- Default JumpPower
                player.CameraMinZoomDistance = 0.5 -- Default min zoom
                player.CameraMaxZoomDistance = 400 -- Default max zoom
                player.DevEnableMouseLock = true -- Re-enable mouse lock
                player.DevCameraOcclusionMode = Enum.DevCameraOcclusionMode.Zoom -- Default camera occlusion
                player.CameraMode = Enum.CameraMode.Classic -- Revert to classic camera mode
                player.Character.Humanoid.PlatformStand = false
            end
        end

        -- If the player dies, update the death cause and show the death hint
        if game.Players.LocalPlayer.Character.Humanoid.Health <= 0 then
            -- Show death hint
            firesignal(game.ReplicatedStorage.RemotesFolder.DeathHint.OnClientEvent, {"You died to who you call owner...", "He spawns in center of room and he will damage you if you dont look at him", "He doesnt like to be ignoring"}, "Blue")
            wait(0.01)
            -- Update the death cause in the game stats
            game:GetService("ReplicatedStorage").GameStats["Player_" .. game.Players.LocalPlayer.Name].Total.DeathCause.Value = "HUGERRORED"
        end
    end
end)

-- Wait for the room to change
game.ReplicatedStorage.GameData.LatestRoom.Changed:Wait()
Kill = false

-- Destroy DepthTer when no longer needed
depthsTer:Destroy()

---====== Load achievement giver ======---
local achievementGiver = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Custom%20Achievements/Source.lua"))()

---====== Display achievement ======---
achievementGiver({
    Title = "Pro gamer",
    Desc = "Last chance to not look at me",
    Reason = "Encounter HUGERRORED",
    Image = "rbxassetid://97059893535136"
})
